generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum SensorType {
  SUHU_UDARA
  KELEMBAPAN_TANAH
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([username])
}

model Sensor {
  id        Int        @id @default(autoincrement())
  type      SensorType
  value     Float
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([type])
}
